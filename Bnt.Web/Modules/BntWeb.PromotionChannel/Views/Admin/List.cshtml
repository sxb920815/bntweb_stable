@using System.Web.Optimization
@using Autofac
@using BntWeb.Environment
@using BntWeb.Security
@using BntWeb.Security.Identity
@{
    ViewBag.Title = PromotionChannelModule.DisplayName;
    ViewBag.SubTitle = "渠道列表";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section HeaderRight {
    <a class="btn btn-info" href="@Url.Action("Create", "Admin", new {area = PromotionChannelModule.Area })">
        <i class="icon-plus bigger-110"></i>
        新增
    </a>
}
<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table id="ChannelsTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            渠道名称
                        </th>
                        <th>
                            推广人数
                        </th>
                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                            创建时间
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody></tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {

    @Scripts.Render("~/js/admin/jquery-datatable")

    <script type="text/javascript">

        var url_loadPage = "@Url.Action("ListOnPage", "Admin", new {area = PromotionChannelModule.Area })";
        var url_edit = "@Url.Action("Edit", "Admin", new {area = PromotionChannelModule.Area })";
        var url_delete = "@Url.Action("Delete", "Admin", new {area = PromotionChannelModule.Area })";
    </script>

    @Scripts.Render("~/js/admin/channels/list")
}

